{
  "compilerOptions": {
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "esnext",
    "target": "es5",
    "jsx": "react",
    "strict": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "typing/*.d.ts"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
